<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".DoomSoundBoard"
    android:background="@drawable/doombgpng">

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="300dp"
        android:layout_below="@+id/btnEnemy"
        android:layout_alignParentStart="true"
        android:id="@+id/scrollView2">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <Button
                android:id="@+id/btnarachnotron"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Arachnotron"
                android:background="@null"
                android:textColor="#fa0000"
                android:textSize="30dp"
                android:textStyle="bold"/>

            <Button
                android:id="@+id/btnarchvile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Arch-Vile"
                android:background="@null"
                android:textColor="#fa0000"
                android:textSize="30dp"
                android:textStyle="bold"/>

            <Button
                android:id="@+id/btnbaronofhell"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Baron Of Hell"
                android:background="@null"
                android:textColor="#fa0000"
                android:textSize="30dp"
                android:textStyle="bold"/>

            <Button
                android:id="@+id/btncacodemon"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Cacodemon"
                android:background="@null"
                android:textColor="#fa0000"
                android:textSize="30dp"
                android:textStyle="bold"/>

            <Button
                android:id="@+id/btncyberdemon"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Cyberdemon"
                android:background="@null"
                android:textColor="#fa0000"
                android:textSize="30dp"
                android:textStyle="bold"/>

            <Button
                android:id="@+id/btndemon"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Demon"
                android:background="@null"
                android:textColor="#fa0000"
                android:textSize="30dp"
                android:textStyle="bold"/>

            <Button
                android:id="@+id/btnhellknight"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Hell Knight"
                android:background="@null"
                android:textColor="#fa0000"
                android:textSize="30dp"
                android:textStyle="bold"/>

            <Button
                android:id="@+id/btniconofsin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Icon Of Sin"
                android:background="@null"
                android:textColor="#fa0000"
                android:textSize="30dp"
                android:textStyle="bold"/>
            <Button
                android:id="@+id/btnimp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Imp"
                android:background="@null"
                android:textColor="#fa0000"
                android:textSize="30dp"
                android:textStyle="bold"/>
            <Button
                android:id="@+id/btnlostsoul"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Lost Soul"
                android:background="@null"
                android:textColor="#fa0000"
                android:textSize="30dp"
                android:textStyle="bold"/>

            <Button
                android:id="@+id/btnmancubus"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Mancubus"
                android:background="@null"
                android:textColor="#fa0000"
                android:textSize="30dp"
                android:textStyle="bold"/>

            <Button
                android:id="@+id/btnpainelemental"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Pain Elemental"
                android:background="@null"
                android:textColor="#fa0000"
                android:textSize="30dp"
                android:textStyle="bold"/>

            <Button
                android:id="@+id/btnrevenant"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Reventant"
                android:background="@null"
                android:textColor="#fa0000"
                android:textSize="30dp"
                android:textStyle="bold"/>

            <Button
                android:id="@+id/btnshotgunguy"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Shotgun Guy"
                android:background="@null"
                android:textColor="#fa0000"
                android:textSize="30dp"
                android:textStyle="bold"/>

            <Button
                android:id="@+id/btnthespidermastermind"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="The Spider Mastermind"
                android:background="@null"
                android:textColor="#fa0000"
                android:textSize="30dp"
                android:textStyle="bold"/>



        </LinearLayout>
    </ScrollView>

    <com.google.android.gms.ads.AdView
        android:id="@+id/adView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        ads:adSize="BANNER"
        ads:adUnitId="@string/banner_ad_unit_id" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Change Music"
        android:id="@+id/btnchangemusic"
        android:background="@null"
        android:textSize="30dp"
        android:textColor="#fa0000"
        android:textStyle="bold"
        android:layout_below="@+id/scrollView2"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enemies:"
        android:id="@+id/btnEnemy"
        android:background="@null"
        android:textColor="#fa0000"
        android:textSize="30dp"
        android:textStyle="bold"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:text="Return"
        android:id="@+id/btnreturn"
        android:background="@null"
        android:textSize="30dp"
        android:textColor="#fa0000"
        android:textStyle="bold"
        android:layout_below="@+id/btnchangemusic"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:text="Stop"
        android:id="@+id/btnstop"
        android:background="@null"
        android:textSize="30dp"
        android:textColor="#fa0000"
        android:textStyle="bold"
        android:layout_below="@+id/btnchangemusic"
        android:layout_toEndOf="@+id/btnreturn" />


</RelativeLayout>
